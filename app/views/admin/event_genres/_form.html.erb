<%= form_with :model => genre, url:admin_event_genres_path, method: :post, remort: true  do |f| %>

<div class="field row">
  <%= f.label :ジャンル名 %><br />
  <%= f.text_field :name %>
  <%= f.label :is_active, "有効", {is_active: :true} %>
  <%= f.radio_button :is_active, true %>
  <%= f.label :is_active, "無効", {is_active: :false} %>
  <%= f.radio_button :is_active, false %>
  <%= f.submit :登録する, class: "btn btn-success" %>
</div>
<% end %>


