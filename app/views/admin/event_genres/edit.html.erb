<% @page_title = "イベントジャンル編集" %>

<div class="container">

<div class="main-title">
  <h2><%= @page_title %></h2>
</div>

<%= form_with :model => @genre, url:admin_event_genre_path, method: :patch, local: true  do |f| %>
<div class="field row">
  <%= f.label :ジャンル名 %><br />
  <%= f.text_field :name %>
  <%= f.label :is_active, "有効", {is_active: :true} %>
  <%= f.radio_button :is_active, true %>
  <%= f.label :is_active, "無効", {is_active: :false} %>
  <%= f.radio_button :is_active, false %>
</div>

<div class="actions row"><br />
<div class="col-xs-12">
  <%= f.submit :編集する, class: "btn btn-success" %>
</div>
</div>
<% end %>
</div>