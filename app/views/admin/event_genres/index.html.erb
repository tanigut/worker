<% @page_title = "イベントジャンル一覧" %>

<div class="container">

<div class="main-title">
  <h2><%= @page_title %></h2>
</div>

<%= render "layouts/error_messages", model: @genre %>

<%= form_with :model => @genre, url:admin_event_genres_path, method: :post, local: true  do |f| %>

<br>
<br>

<div class="field row">
  <%= f.label :ジャンル名 %><br />
  <%= f.text_field :name %>
  <%= f.label :is_active, "有効", {is_active: :true} %>
  <%= f.radio_button :is_active, true %>
  <%= f.label :is_active, "無効", {is_active: :false} %>
  <%= f.radio_button :is_active, false %>
  <%= f.submit :登録する, class: "btn btn-success" %>
</div>
<% end %>

<br>

<table class="table table-bordered">
<thead>
 <tr>
  <th class="info">ジャンル名</th>
  <th class="info">状態</th>
  <th class="info"></th>
 </tr>
</thead>

<tbody>
 <% @genres.each do |genre| %>
 <tr>
  <td><%= genre.name %></td>
  <td><%= genre.is_active == true ? "有効" : "無効" %></td>
  <td>
      <%= link_to '編集する', edit_admin_event_genre_path(genre), class: 'btn-sm btn-primary' %>
  </td>
 </tr>
 <% end %>
</tbody>
</table>

<%#= paginate @genres %>

</div>