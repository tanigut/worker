
<table class="table table-hover table-inverse">
  <tr>
    <th>会員ID</th>
    <td><%= @member.id %></td>
  </tr>

  <tr>
    <th>氏名</th>
    <td><%= member.full_name_kana %><br>
        <%= member.full_name %>
    </td>
  </tr>

  <tr>
    <th>メールアドレス</th>
    <td><%= member.email %></td>
  </tr>

  <tr>
    <th>会社名</th>
    <td><%= member.company_name %></td>
  </tr>

  <tr>
    <th>会員ステータス</th>
    <td><%= member.is_deleted == true ? "有効" : "無効" %></td>
  </tr>

</table>
