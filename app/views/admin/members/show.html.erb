<% @page_title = "会員一覧" %>

<div class="container">

<h2><%= @page_title %></h2>

<%= form_with :model => @member, url:admin_member_path, method: :patch, local: true  do |f| %>
<div class="field row">
  <%= f.label :is_deleted, "有効", {is_deleted: :true} %>
  <%= f.radio_button :is_deleted, true %>
  <%= f.label :is_deleted, "無効", {is_deleted: :false} %>
  <%= f.radio_button :is_deleted, false %>
</div>

<div class="actions row"><br />
<div class="col-xs-12">
  <%= f.submit :編集する, class: "btn btn-success" %>
</div>
</div>
<% end %>

<br>

<%= render "body", member: @member %>

</div>