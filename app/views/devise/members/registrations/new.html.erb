<% @page_title = "新規会員登録ページ" %>
<div class="container">

<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/members/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :名前 %><br />
    <%= f.label :"(姓)" %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %><br />
    <%= f.label :"(名)" %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

<br>

  <div class="field">
    <%= f.label :フリガナ %><br />
    <%= f.label :"(セイ)" %><br />
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %><br />
    <%= f.label :"(メイ)" %><br />
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>

<br>

  <div class="field">
    <%= f.label :会社名 %><br />
    <%= f.text_field :company_name, autofocus: true, autocomplete: "company_name" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード(6文字以上)" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録する" %>
  </div>
<% end %>

<%= render "devise/members/shared/links" %>
</div>
