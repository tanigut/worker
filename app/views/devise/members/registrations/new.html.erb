<% @page_title = "新規会員登録ページ" %>
<div class="container">
<div class="text-center">

<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <%= render "layouts/error_messages", model: @member %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", :placeholder => "(姓)" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", :placeholder => "(名)" %>
  </div>

<br>

  <div class="field">
    <%= f.label :hurigana %><br />
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", :placeholder => "(セイ)" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", :placeholder => "(メイ)" %>
  </div>

<br>

  <div class="field"><br />
    <%= f.text_field :company_name, autofocus: true, autocomplete: "company_name", :placeholder => "会社名" %>
  </div>

  <div class="field"><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "メールアドレス" %>
  </div>

  <div class="field"><br />
    <%= f.password_field :password, autocomplete: "new-password", :placeholder => "パスワード(6文字以上)" %>
  </div>

  <div class="field"><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => "パスワード(確認用)" %>
  </div>

  <div class="actions"><br />
    <%= f.submit "新規登録する" %>
  </div>
<% end %>

<%#= render "devise/members/shared/links" %>
<br>

<%= link_to 'ログイン', new_member_session_path, class: 'btn btn-primary' %>


</div>
</div>
