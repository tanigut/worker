<% @page_title = "ログインページ" %>

<div class="container">
<div class="text-center">

<%= alert %>

<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field"><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "ご登録のメールアドレス"  %>
  </div>

  <div class="field"><br>
    <%= f.password_field :password, autocomplete: "current-password", :placeholder => "パスワード" %>
  </div>

  <% if devise_mapping.rememberable? %><br />
    <div class="field">
      <%#= f.check_box :remember_me %>
      <%#= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class: 'btn btn-success' %>
  </div>
<% end %>

<%#= render "devise/members/shared/links" %>
<br>
<%= button_to '新規登録', new_member_registration_path, class: 'btn btn-primary', method: :get %>


</div>
</div>

