<% @page_title = "会員編集" %>

<div class="container">

<h2><%= @page_title %></h2>

<%= form_with :model => @member, url:member_path, method: :patch, local: true  do |f| %>

<div class="field row">
  <%= f.label :name %><br />
  <%= f.text_field :last_name %>
  <%= f.text_field :first_name %>
</div>

<div class="field row">
  <%= f.label :hurigana %><br />
  <%= f.text_field :last_name_kana %>
  <%= f.text_field :first_name_kana %>
</div>

<div class="field row">
  <%= f.label :company_name %><br />
  <%= f.text_field :company_name %>
</div>

<div class="field row">
  <%= f.label :email %><br />
  <%= f.email_field :email %>
</div>

<div class="actions row"><br />
<div class="col-xs-12">
  <%= f.submit :更新, class: "btn btn-success" %>
</div>
</div>
<% end %>

</div>