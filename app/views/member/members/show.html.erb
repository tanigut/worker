<% @page_title = "会員マイページ" %>

<div class="container">

<div class="main-title">
  <div class="fas fa-user size"><%= @page_title %></div>
</div>

<table class="table table-bordered">
<thead>
 <tr>
  <th class="info">会員id</th>
  <th class="info">名前</th>
  <th class="info">メールアドレス</th>
  <th class="info">会社名</th>
  <th class="info"></th>
 </tr>
</thead>

<tbody>
 <tr>
  <td><%= @member.id %></td>
  <td><%= @member.full_name_kana %><br>
      <%= @member.full_name %>
  </td>
  <td><%= @member.email %></td>
  <td><%= @member.company_name %></td>
  <td>
      <%= link_to '編集', edit_member_path(@member), class: 'btn-sm btn-primary' %>
  </td>
 </tr>
</tbody>
</table>

</div>