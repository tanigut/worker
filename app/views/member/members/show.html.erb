<% @page_title = "会員マイページ" %>

<div class="container">

<div class="main-title">
  <div class="fas fa-user size"><%= @page_title %></div>
</div>

<div class="main-body">
<h4>会員情報</h4>
<table class="table table-hover table-inverse">
  <tr>
    <th>会員ID</th>
    <td><%= @member.id %></td>
  </tr>

  <tr>
    <th>氏名</th>
    <td><%= @member.full_name_kana %><br>
        <%= @member.full_name %>
    </td>
  </tr>

  <tr>
    <th>メールアドレス</th>
    <td><%= @member.email %></td>
  </tr>

  <tr>
    <th>会社名</th>
    <td><%= @member.company_name %></td>
  </tr>

</table>

  <%= button_to '編集', edit_member_path(@member), class: 'btn-sm btn-primary', method: :get %>
</div>

</div>