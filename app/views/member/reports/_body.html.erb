<table class="table table-bordered">
<thead>
 <tr>
  <th class="info">予約ID</th>
  <th class="info">責任者</th>
  <th class="info">開始時刻</th>
  <th class="info">終了時刻</th>
  <th class="info">作業画像</th>
  <th class="info">作業内容</th>
 </tr>
</thead>

<tbody>
 <tr>
  <td><%= request.id %></td>
  <td><%= request.chief_name %></td>
  <% if request.report.present? %>
  <td><%= request.report.in_at %></td>
  <td><%= request.report.out_at %></td>
  <% else %>
  <td></td>
  <td></td>
  <% end %>
  <td><%= attachment_image_tag @report, :image, :fill, 100, 100, format: 'jpeg' %></td>
  <td><%= report.body %></td>
 </tr>
</tbody>
</table>