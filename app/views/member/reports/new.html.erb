<% @page_title = "報告ページ" %>

<div class="container">

<div class="main-title">
  <div class="fas fa-user size"><%= @page_title %></div>
</div>

<%= render "body", report: @report, request: @request %>

<div class="text-center">


<!-- 現在時間を表示　-->
<h1 id="time"></h1>
<script>
  time();
  function time(){
      var now = new Date();
      document.getElementById("time").innerHTML = now.toLocaleTimeString();
  }
  setInterval('time()',1000);
</script>
<!-- 現在時間を表示　-->

<%= render "form", report: @report, request: @request, now: @now %>

